<div class="container">    
  <div id="loginbox" style="margin-top:80px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" >
      <div class="panel-heading">
          <div class="panel-title">Autenticación de Usuarios</div>
          <div style="float:right; font-size: 80%; position: relative; top:-10px"><%= link_to "Olvidó la contraseña?", new_password_path(resource_name) %></div>
      </div>     

      <div style="padding-top:30px" class="panel-body" >

        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
           
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :id => "loginform", :class => "form-horizontal", :role => "form"}) do |f| %>
                              
          <div style="margin-bottom: 10px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :signin, autofocus: true, :id => "login-username", :class => "form-control", :placeholder => "Usuario or Email ... "  %>
          </div>
                            
          <div style="margin-bottom: 10px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", :id => "login-password", :class => "form-control", :placeholder => "Contraseña ... "  %>
          </div>

          <div style="margin-top:10px;" class="form-group" >
              <!-- Button -->
              <div class="col-sm-12 controls" align="right">
                <%= f.submit "Entrar", :id => "btn-login", :class => "btn btn-success", :style => "width:20%;" %>
                </div>
          </div>
          
          <% if devise_mapping.rememberable? -%>                      
            <div class="input-group">
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me, :id => "login-remember", :name => "remember", :value => 1 %>
                  <%= f.label :remember_me, "Recordarme" %>
                </label>
              </div>
            </div>
          <% end -%>
          
          <br>

          <div class="form-group">
              <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:5px; font-size:85%" >
                      No tengo una cuenta! 
                      <%= link_to "Regístrese aquí", new_registration_path(resource_name) %> 
                  </div>
              </div>
          </div> 

        <% end %> 

      </div>                     
    </div>  
  </div>
</div>

